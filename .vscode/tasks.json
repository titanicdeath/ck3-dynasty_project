{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with universal_compiler.bat",
            "type": "shell",
            "command": "${workspaceFolder}\\universal_compiler.bat", // or wherever your script is
            "args": [
                "${file}" // This passes the currently open file (e.g. prototype_version-4_parser.cpp)
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Matches GCC's error messages so problems show in VSCode
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
